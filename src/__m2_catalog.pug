mixin catalogArea  
  //- импорт из data.json (подключается через gulp task)
  .catalog
    each item in tovars
      .tovarCard__area(id=item.id)
        .tovarCard__areaborder
          a.tovarCard(href='#')
            .tovarCard__img
              .tovarCard__fav
                i.icon-favorit1.favOff
                i.icon-favorit2.favOn
              img.tovarCard__imgImg.tovarCard__imgImg1(src!=item.img1, alt='')
              img.tovarCard__imgImg.tovarCard__imgImg2(src!=item.img2, alt='')
              if item.discount
                .tovarCard__priceDiscount!=item.discount
            .tovarCard__info
              .tovarCard__infoTop
                .tovarCard__priceArea
                  if item.oldPrice
                    .tovarCard__priceOld!= item.oldPrice
                      span ₽
                    .tovarCard__price.tovarCard__price_red!= item.price
                      span ₽
                  else
                    .tovarCard__price!= item.price
                      span ₽
              .tovarCard__infoTitle
                span!= item.content
                span.tovarCard__infoTitleSlash /
                span!= item.title
            .tovarCard__wrapper
              .tovarCard__moreArea
                .tovarCard__more
                  .tovarCard__moreInfo
                    span Размеры: 
                    span S, L, XL, XXL
                  .tovarCard__moreInfoLink Подробнее...
            

  
