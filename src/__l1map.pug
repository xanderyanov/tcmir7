mixin l1mapTitle 
  .l1bTitle__area#l1map
    .l1bTitle
      h2 Схема торгового комплекса

mixin l1map
  .l1map__area 
    .l1map__outer
      .l1map 
        .l1mapTabsArea
          .l1mapTabsArea__titles 
            a.l1mapTabs__title.active(href="#" data-tab='1') 1 этаж
            a.l1mapTabs__title(href="#" data-tab='2') 2 этаж
          .l1mapTabs__widgets
            .l1mapTabs__widget.active(data-widget='1')
              img(src="assets/img/schema/first floor.svg", alt="")
            .l1mapTabs__widget(data-widget='2')
              img(src="assets/img/schema/second floor.svg", alt="")
        .l1mapCategoryArea
          .l1mapCategory
            .l1mapCategory__itemOuter
              a.l1mapCategory__item(href="") Одежда
            .l1mapCategory__itemOuter
              a.l1mapCategory__item.active(href="") Обувь
            .l1mapCategory__itemOuter
              a.l1mapCategory__item(href="") Аксессуары
            .l1mapCategory__itemOuter
              a.l1mapCategory__item(href="") Косметика
            .l1mapCategory__itemOuter
              a.l1mapCategory__item(href="") Дом
            .l1mapCategory__itemOuter
              a.l1mapCategory__item(href="") Услуги
          